<div class="row mb-4">
  <div class="col-md-12">
    <div class="card shadow-sm">
      <div class="card-body d-flex justify-content-between align-items-center">
        <div>
          <h1 class="mb-0">
            <i class="fas fa-users text-primary me-2"></i>Kylfingar
          </h1>
          <p class="lead mb-0">Umsjón með kylfingum í GKG</p>
        </div>
        <a href="/players/add" class="btn btn-success">
          <i class="fas fa-user-plus me-2"></i>Bæta við kylfingi
        </a>
      </div>
    </div>
  </div>
</div>

<% if(players.length > 0) { %>
  <div class="row">
    <div class="col-md-12">
      <div class="card shadow-sm">
        <div class="card-header bg-light">
          <h3>Allir kylfingar</h3>
        </div>
        <div class="card-body">
          <div class="table-responsive">
            <table class="table table-striped table-hover">
              <thead>
                <tr>
                  <th>Nafn</th>
                  <th>Stig</th>
                  <th>Aðgerðir</th>
                </tr>
              </thead>
              <tbody>
                <% players.forEach(player => { %>
                  <tr>
                    <td><%= player.name %></td>
                    <td>
                      <span class="badge <%= player.points > 0 ? 'bg-success' : 'bg-secondary' %> point-badge">
                        <%= player.points %>
                      </span>
                    </td>
                    <td>
                      <div class="btn-group" role="group">
                        <a href="/players/edit/<%= player._id %>" class="btn btn-primary btn-sm">
                          <i class="fas fa-edit me-1"></i>Breyta
                        </a>
                        <a href="/players/<%= player._id %>/points" class="btn btn-success btn-sm">
                          <i class="fas fa-plus-circle me-1"></i>Stig
                        </a>
                        <form action="/players/<%= player._id %>?_method=DELETE" method="POST" class="d-inline">
                          <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Ertu viss um að þú viljir eyða þessum kylfingi?')">
                            <i class="fas fa-trash me-1"></i>Eyða
                          </button>
                        </form>
                      </div>
                    </td>
                  </tr>
                <% }); %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
<% } else { %>
  <div class="row">
    <div class="col-md-12">
      <div class="card shadow-sm">
        <div class="card-body text-center">
          <p class="lead">Engir kylfingar hafa verið skráðir enn.</p>
          <a href="/players/add" class="btn btn-primary">
            <i class="fas fa-user-plus me-2"></i>Skrá fyrsta kylfing
          </a>
        </div>
      </div>
    </div>
  </div>
<% } %> 