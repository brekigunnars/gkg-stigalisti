<div class="container mt-5">
  <h1 class="mb-4"><%= title %></h1>
  
  <div class="row">
    <div class="col-md-12">
      <div class="card">
        <div class="card-body">
          <table class="table table-hover">
            <thead>
              <tr>
                <th>Rank</th>
                <th>Name</th>
                <th>Points</th>
              </tr>
            </thead>
            <tbody>
              <% players.forEach((player, index) => { %>
                <tr>
                  <td><%= index + 1 %></td>
                  <td><%= player.name %></td>
                  <td><%= player.points %></td>
                </tr>
              <% }); %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
