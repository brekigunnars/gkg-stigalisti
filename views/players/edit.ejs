<div class="row mb-4">
  <div class="col-md-12">
    <div class="card shadow-sm">
      <div class="card-body">
        <h1 class="mb-3">
          <i class="fas fa-user-edit text-primary me-2"></i>Breyta kylfingi
        </h1>
        <p class="lead">Uppfæra upplýsingar um <%= player.name %></p>
      </div>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-md-6 mx-auto">
    <div class="card shadow-sm">
      <div class="card-header bg-light">
        <h3>Upplýsingar um kylfing</h3>
      </div>
      <div class="card-body">
        <form action="/players/<%= player._id %>?_method=PUT" method="POST">
          <div class="mb-3">
            <label for="name" class="form-label">Nafn *</label>
            <input 
              type="text" 
              class="form-control" 
              id="name" 
              name="name"
              value="<%= player.name %>"
              required
            >
          </div>
          
          <div class="mb-3">
            <label for="email" class="form-label">Netfang *</label>
            <input 
              type="email" 
              class="form-control" 
              id="email" 
              name="email"
              value="<%= player.email || '' %>"
              required
            >
          </div>
          
          <div class="mb-3">
            <label for="gender" class="form-label">Kyn *</label>
            <select 
              class="form-select" 
              id="gender" 
              name="gender"
              required
            >
              <option value="">Veldu kyn</option>
              <option value="male" <%= player.gender === 'male' ? 'selected' : '' %>>Karlkyn</option>
              <option value="female" <%= player.gender === 'female' ? 'selected' : '' %>>Kvenkyn</option>
            </select>
          </div>
          
          <div class="mb-3">
            <button type="submit" class="btn btn-primary">
              <i class="fas fa-save me-2"></i>Uppfæra kylfing
            </button>
            <a href="/players" class="btn btn-secondary">
              <i class="fas fa-arrow-left me-2"></i>Til baka
            </a>
          </div>
        </form>
      </div>
    </div>
  </div>
</div> 