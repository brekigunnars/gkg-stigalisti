<div class="row mb-4">
  <div class="col-md-12">
    <div class="card shadow-sm">
      <div class="card-body">
        <h1 class="mb-3">
          <i class="fas fa-user-plus text-success me-2"></i>Bæta við nýjum kylfingi
        </h1>
        <p class="lead">Búa til nýjan kylfingaprófíl</p>
      </div>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-md-8 mx-auto">
    <div class="card shadow-sm">
      <div class="card-header bg-light">
        <h3>Upplýsingar um kylfing</h3>
      </div>
      <div class="card-body">
        <form action="/players" method="POST">
          <div class="mb-3">
            <label for="name" class="form-label">Nafn *</label>
            <input 
              type="text" 
              class="form-control" 
              id="name" 
              name="name"
              value="<%= typeof name != 'undefined' ? name : '' %>"
              required
            >
          </div>
          
          <div class="mb-3">
            <label for="email" class="form-label">Netfang</label>
            <input 
              type="email" 
              class="form-control" 
              id="email" 
              name="email"
              value="<%= typeof email != 'undefined' ? email : '' %>"
            >
          </div>
          
          <div class="mb-3">
            <label for="phone" class="form-label">Símanúmer</label>
            <input 
              type="text" 
              class="form-control" 
              id="phone" 
              name="phone"
              value="<%= typeof phone != 'undefined' ? phone : '' %>"
            >
          </div>
          
          <div class="mb-3">
            <label for="handicap" class="form-label">Forgjöf</label>
            <input 
              type="number" 
              class="form-control" 
              id="handicap" 
              name="handicap"
              step="0.1"
              value="<%= typeof handicap != 'undefined' ? handicap : '' %>"
            >
          </div>
          
          <div class="mb-3">
            <label for="notes" class="form-label">Athugasemdir</label>
            <textarea 
              class="form-control" 
              id="notes" 
              name="notes" 
              rows="3"
            ><%= typeof notes != 'undefined' ? notes : '' %></textarea>
          </div>
          
          <div class="mb-3">
            <button type="submit" class="btn btn-primary">
              <i class="fas fa-save me-2"></i>Vista kylfing
            </button>
            <a href="/players" class="btn btn-secondary">
              <i class="fas fa-arrow-left me-2"></i>Til baka
            </a>
          </div>
        </form>
      </div>
    </div>
  </div>
</div> 