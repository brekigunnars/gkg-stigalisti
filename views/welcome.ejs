<div class="container mt-4">
  <div class="row mb-4">
    <div class="col-md-12">
      <div class="card shadow-sm">
        <div class="card-body text-center">
          <h1 class="mb-3"><i class="fas fa-trophy text-warning me-2"></i>Stigalisti GKG</h1>
          <p class="lead">Núverandi staða kylfinga í GKG</p>
          
          <% if(typeof user !== 'undefined' && user && !user.isAdmin) { %>
            <div class="mt-3">
              <a href="/player-account/dashboard" class="btn btn-primary me-2">
                <i class="fas fa-plus-minus me-1"></i>Stjórna mínum stigum
              </a>
              <a href="/player-account/dashboard" class="btn btn-outline-secondary">
                <i class="fas fa-user me-1"></i>Mín síða
              </a>
            </div>
          <% } %>
        </div>
      </div>
    </div>
  </div>

  <% if(menPlayers.length > 0 || womenPlayers.length > 0) { %>
    <div class="row">
      <% if(menPlayers.length > 0) { %>
        <div class="col-md-6 mb-4">
          <div class="card shadow-sm">
            <div class="card-header bg-light">
              <h3>Karlar</h3>
            </div>
            <div class="card-body">
              <div class="table-responsive">
                <table class="table table-striped table-hover">
                  <thead>
                    <tr>
                      <th>Sæti</th>
                      <th>Kylfingur</th>
                      <th class="text-end">Stig</th>
                      <th class="text-end">Síðast uppfært</th>
                      <th class="text-center">Stigayfirlit</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% menPlayers.forEach((player, index) => { %>
                      <tr<%= index < 8 ? ' class="table-success"' : '' %>>
                        <td>
                          <span class="badge bg-secondary">#<%= index + 1 %></span>
                        </td>
                        <td>
                          <span class="text-dark fw-bold">
                            <%= player.name %>
                          </span>
                        </td>
                        <td class="text-end">
                          <span class="badge <%= player.points > 0 ? 'bg-success' : 'bg-secondary' %> point-badge">
                            <%= player.points %>
                          </span>
                        </td>
                        <td class="text-end">
                          <small class="text-muted">
                            <%= player.pointsLastUpdated ? new Date(player.pointsLastUpdated).toLocaleDateString('is-IS') : '-' %>
                          </small>
                        </td>
                        <td class="text-center">
                          <button class="btn btn-sm btn-outline-primary" type="button" data-bs-toggle="collapse" 
                                  data-bs-target="#pointEntries-<%= player._id %>" aria-expanded="false" 
                                  aria-controls="pointEntries-<%= player._id %>" onclick="setTimeout(() => loadPointEntries('<%= player._id %>'), 350)">
                            <i class="fas fa-list-alt me-1"></i>
                            <span id="entryCount-<%= player._id %>">Skoða</span>
                          </button>
                        </td>
                      </tr>
                      <tr>
                        <td colspan="5" class="p-0">
                          <div class="collapse" id="pointEntries-<%= player._id %>">
                            <div class="card card-body bg-light m-2">
                              <div id="pointEntriesContent-<%= player._id %>">
                                <div class="text-center">
                                  <div class="spinner-border spinner-border-sm" role="status">
                                    <span class="visually-hidden">Hleð...</span>
                                  </div>
                                  <p class="mt-2 mb-0">Hleður stigayfirlit...</p>
                                </div>
                              </div>
                            </div>
                          </div>
                        </td>
                      </tr>
                    <% }); %>
                  </tbody>
                </table>
              </div>
            </div>
          </div>
        </div>
      <% } %>

      <% if(womenPlayers.length > 0) { %>
        <div class="col-md-6 mb-4">
          <div class="card shadow-sm">
            <div class="card-header bg-light">
              <h3>Konur</h3>
            </div>
            <div class="card-body">
              <div class="table-responsive">
                <table class="table table-striped table-hover">
                  <thead>
                    <tr>
                      <th>Sæti</th>
                      <th>Kylfingur</th>
                      <th class="text-end">Stig</th>
                      <th class="text-end">Síðast uppfært</th>
                      <th class="text-center">Stigayfirlit</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% womenPlayers.forEach((player, index) => { %>
                      <tr<%= index < 8 ? ' class="table-success"' : '' %>>
                        <td>
                          <span class="badge bg-secondary">#<%= index + 1 %></span>
                        </td>
                        <td>
                          <span class="text-dark fw-bold">
                            <%= player.name %>
                          </span>
                        </td>
                        <td class="text-end">
                          <span class="badge <%= player.points > 0 ? 'bg-success' : 'bg-secondary' %> point-badge">
                            <%= player.points %>
                          </span>
                        </td>
                        <td class="text-end">
                          <small class="text-muted">
                            <%= player.pointsLastUpdated ? new Date(player.pointsLastUpdated).toLocaleDateString('is-IS') : '-' %>
                          </small>
                        </td>
                        <td class="text-center">
                          <button class="btn btn-sm btn-outline-primary" type="button" data-bs-toggle="collapse" 
                                  data-bs-target="#pointEntries-<%= player._id %>" aria-expanded="false" 
                                  aria-controls="pointEntries-<%= player._id %>" onclick="setTimeout(() => loadPointEntries('<%= player._id %>'), 350)">
                            <i class="fas fa-list-alt me-1"></i>
                            <span id="entryCount-<%= player._id %>">Skoða</span>
                          </button>
                        </td>
                      </tr>
                      <tr>
                        <td colspan="5" class="p-0">
                          <div class="collapse" id="pointEntries-<%= player._id %>">
                            <div class="card card-body bg-light m-2">
                              <div id="pointEntriesContent-<%= player._id %>">
                                <div class="text-center">
                                  <div class="spinner-border spinner-border-sm" role="status">
                                    <span class="visually-hidden">Hleð...</span>
                                  </div>
                                  <p class="mt-2 mb-0">Hleður stigayfirlit...</p>
                                </div>
                              </div>
                            </div>
                          </div>
                        </td>
                      </tr>
                    <% }); %>
                  </tbody>
                </table>
              </div>
            </div>
          </div>
        </div>
      <% } %>
    </div>
  <% } else { %>
    <div class="row">
      <div class="col-md-12">
        <div class="card shadow-sm">
          <div class="card-body text-center">
            <p class="lead">Engir kylfingar hafa verið skráðir enn.</p>
            <% if(typeof user !== 'undefined' && user) { %>
              <a href="/players/add" class="btn btn-primary">
                <i class="fas fa-user-plus me-2"></i>Skrá fyrsta kylfing
              </a>
            <% } %>
          </div>
        </div>
      </div>
    </div>
  <% } %>
</div>

<script>
const loadedPlayers = new Set();

async function loadPointEntries(playerId) {
  console.log('Loading point entries for player:', playerId);
  
  const contentDiv = document.getElementById(`pointEntriesContent-${playerId}`);
  if (!contentDiv) {
    console.error('Content div not found for player:', playerId);
    return;
  }
  
  console.log('Content div found:', contentDiv);
  
  // Show loading message
  contentDiv.innerHTML = '<div class="text-center"><i class="fas fa-spinner fa-spin"></i> Hleður stigayfirlit...</div>';
  console.log('Loading message set');
  
  try {
    // Add timeout to prevent endless loading
    const controller = new AbortController();
    const timeoutId = setTimeout(() => controller.abort(), 10000); // 10 second timeout
    
    console.log('Making API call to:', `/api/player/${playerId}/point-entries`);
    const response = await fetch(`/api/player/${playerId}/point-entries`, {
      signal: controller.signal
    });
    
    clearTimeout(timeoutId);
    console.log('API response status:', response.status);
    
    if (!response.ok) {
      throw new Error(`HTTP error! status: ${response.status}`);
    }
    
    const data = await response.json();
    console.log('API response data:', data);
    
    if (!data.pointEntries || data.pointEntries.length === 0) {
      console.log('No point entries found, setting no entries message');
      contentDiv.innerHTML = '<div class="text-muted text-center">Engar stigafærslur fundust</div>';
      return;
    }
    
    console.log('Building HTML for', data.pointEntries.length, 'entries');
    
    // Build the entries HTML
    let entriesHtml = '<div class="list-group">';
    data.pointEntries.forEach((entry, index) => {
      console.log(`Processing entry ${index + 1}:`, entry);
      const date = new Date(entry.createdAt).toLocaleDateString('is-IS');
      const time = new Date(entry.createdAt).toLocaleTimeString('is-IS', { 
        hour: '2-digit', 
        minute: '2-digit' 
      });
      const pointsClass = entry.points > 0 ? 'text-success' : 'text-danger';
      const pointsSign = entry.points > 0 ? '+' : '';
      
      entriesHtml += `
        <div class="list-group-item">
          <div class="d-flex justify-content-between align-items-start">
            <div>
              <h6 class="mb-1">${entry.comment}</h6>
              <small class="text-muted">Bætt við af: ${entry.addedBy ? entry.addedBy.name : 'Óþekkt'}</small>
            </div>
            <div class="text-end">
              <span class="badge ${pointsClass === 'text-success' ? 'bg-success' : 'bg-danger'} rounded-pill">
                ${pointsSign}${entry.points}
              </span>
              <br>
              <small class="text-muted">${date} ${time}</small>
            </div>
          </div>
        </div>
      `;
    });
    entriesHtml += '</div>';
    
    console.log('Generated HTML:', entriesHtml.substring(0, 200) + '...');
    console.log('Setting innerHTML...');
    
    // Force the content update multiple times to override Bootstrap
    contentDiv.innerHTML = entriesHtml;
    
    console.log('Content updated successfully. Current innerHTML length:', contentDiv.innerHTML.length);
    
    // Force update again after a delay to ensure it sticks
    setTimeout(() => {
      console.log('Double-checking content after 100ms. Current innerHTML length:', contentDiv.innerHTML.length);
      if (contentDiv.innerHTML.includes('Hleður stigayfirlit') || contentDiv.innerHTML.includes('spinner')) {
        console.error('Content was overridden! Forcing update again...');
        contentDiv.innerHTML = entriesHtml;
        console.log('Content forced again. New length:', contentDiv.innerHTML.length);
      }
    }, 100);
    
    // Triple check after longer delay
    setTimeout(() => {
      console.log('Triple-checking content after 500ms. Current innerHTML length:', contentDiv.innerHTML.length);
      if (contentDiv.innerHTML.includes('Hleður stigayfirlit') || contentDiv.innerHTML.includes('spinner')) {
        console.error('Content was overridden again! Final force update...');
        contentDiv.innerHTML = entriesHtml;
        console.log('Final content update. New length:', contentDiv.innerHTML.length);
      }
    }, 500);
    
  } catch (err) {
    console.error('Error loading point entries:', err);
    
    let errorMessage = 'Villa kom upp við að sækja stigayfirlit';
    if (err.name === 'AbortError') {
      errorMessage = 'Tímamörk runnu út við að sækja stigayfirlit';
    } else if (err.message.includes('Failed to fetch')) {
      errorMessage = 'Ekki tókst að tengjast netþjóni';
    }
    
    contentDiv.innerHTML = `
      <div class="alert alert-warning text-center">
        <i class="fas fa-exclamation-triangle"></i> ${errorMessage}
        <br>
        <button class="btn btn-sm btn-outline-primary mt-2" onclick="loadPointEntries('${playerId}')">
          <i class="fas fa-redo"></i> Reyna aftur
        </button>
      </div>
    `;
    
    console.log('Error message set in contentDiv');
  }
}
</script> 