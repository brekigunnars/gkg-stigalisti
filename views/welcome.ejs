<div class="container mt-4">
  <div class="row mb-4">
    <div class="col-md-12">
      <div class="card shadow-sm">
        <div class="card-body text-center">
          <h1 class="mb-3"><i class="fas fa-trophy text-warning me-2"></i>Stigalisti GKG</h1>
          <p class="lead">Núverandi staða kylfinga í GKG</p>
          
          <% if(typeof user !== 'undefined' && user && !user.isAdmin) { %>
            <div class="mt-3">
              <a href="/player-account/dashboard" class="btn btn-primary me-2">
                <i class="fas fa-plus-minus me-1"></i>Stjórna mínum stigum
              </a>
              <a href="/player-account/dashboard" class="btn btn-outline-secondary">
                <i class="fas fa-user me-1"></i>Mín síða
              </a>
            </div>
          <% } %>
        </div>
      </div>
    </div>
  </div>

  <% if(menPlayers.length > 0 || womenPlayers.length > 0) { %>
    <div class="row">
      <% if(menPlayers.length > 0) { %>
        <div class="col-md-6 mb-4">
          <div class="card shadow-sm">
            <div class="card-header bg-light">
              <h3>Karlar</h3>
            </div>
            <div class="card-body">
              <div class="table-responsive">
                <table class="table table-striped table-hover">
                  <thead>
                    <tr>
                      <th>Sæti</th>
                      <th>Kylfingur</th>
                      <th class="text-end">Stig</th>
                      <th class="text-end">Síðast uppfært</th>
                      <th class="text-center">Stigayfirlit</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% menPlayers.forEach((player, index) => { %>
                      <tr<%= index < 8 ? ' class="table-success"' : '' %>>
                        <td>
                          <span class="badge bg-secondary">#<%= index + 1 %></span>
                        </td>
                        <td>
                          <span class="text-dark fw-bold">
                            <%= player.name %>
                          </span>
                        </td>
                        <td class="text-end">
                          <span class="badge <%= player.points > 0 ? 'bg-success' : 'bg-secondary' %> point-badge">
                            <%= player.points %>
                          </span>
                        </td>
                        <td class="text-end">
                          <small class="text-muted">
                            <%= player.pointsLastUpdated ? new Date(player.pointsLastUpdated).toLocaleDateString('is-IS') : '-' %>
                          </small>
                        </td>
                        <td class="text-center">
                          <button class="btn btn-sm btn-outline-primary" type="button" data-bs-toggle="collapse" 
                                  data-bs-target="#pointEntries-<%= player._id %>" aria-expanded="false" 
                                  aria-controls="pointEntries-<%= player._id %>" onclick="loadPointEntries('<%= player._id %>')">
                            <i class="fas fa-list-alt me-1"></i>
                            <span id="entryCount-<%= player._id %>">Skoða</span>
                          </button>
                        </td>
                      </tr>
                      <tr>
                        <td colspan="5" class="p-0">
                          <div class="collapse" id="pointEntries-<%= player._id %>">
                            <div class="card card-body bg-light m-2">
                              <div id="pointEntriesContent-<%= player._id %>">
                                <div class="text-center">
                                  <div class="spinner-border spinner-border-sm" role="status">
                                    <span class="visually-hidden">Hleð...</span>
                                  </div>
                                  <p class="mt-2 mb-0">Hleður stigayfirlit...</p>
                                </div>
                              </div>
                            </div>
                          </div>
                        </td>
                      </tr>
                    <% }); %>
                  </tbody>
                </table>
              </div>
            </div>
          </div>
        </div>
      <% } %>

      <% if(womenPlayers.length > 0) { %>
        <div class="col-md-6 mb-4">
          <div class="card shadow-sm">
            <div class="card-header bg-light">
              <h3>Konur</h3>
            </div>
            <div class="card-body">
              <div class="table-responsive">
                <table class="table table-striped table-hover">
                  <thead>
                    <tr>
                      <th>Sæti</th>
                      <th>Kylfingur</th>
                      <th class="text-end">Stig</th>
                      <th class="text-end">Síðast uppfært</th>
                      <th class="text-center">Stigayfirlit</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% womenPlayers.forEach((player, index) => { %>
                      <tr<%= index < 8 ? ' class="table-success"' : '' %>>
                        <td>
                          <span class="badge bg-secondary">#<%= index + 1 %></span>
                        </td>
                        <td>
                          <span class="text-dark fw-bold">
                            <%= player.name %>
                          </span>
                        </td>
                        <td class="text-end">
                          <span class="badge <%= player.points > 0 ? 'bg-success' : 'bg-secondary' %> point-badge">
                            <%= player.points %>
                          </span>
                        </td>
                        <td class="text-end">
                          <small class="text-muted">
                            <%= player.pointsLastUpdated ? new Date(player.pointsLastUpdated).toLocaleDateString('is-IS') : '-' %>
                          </small>
                        </td>
                        <td class="text-center">
                          <button class="btn btn-sm btn-outline-primary" type="button" data-bs-toggle="collapse" 
                                  data-bs-target="#pointEntries-<%= player._id %>" aria-expanded="false" 
                                  aria-controls="pointEntries-<%= player._id %>" onclick="loadPointEntries('<%= player._id %>')">
                            <i class="fas fa-list-alt me-1"></i>
                            <span id="entryCount-<%= player._id %>">Skoða</span>
                          </button>
                        </td>
                      </tr>
                      <tr>
                        <td colspan="5" class="p-0">
                          <div class="collapse" id="pointEntries-<%= player._id %>">
                            <div class="card card-body bg-light m-2">
                              <div id="pointEntriesContent-<%= player._id %>">
                                <div class="text-center">
                                  <div class="spinner-border spinner-border-sm" role="status">
                                    <span class="visually-hidden">Hleð...</span>
                                  </div>
                                  <p class="mt-2 mb-0">Hleður stigayfirlit...</p>
                                </div>
                              </div>
                            </div>
                          </div>
                        </td>
                      </tr>
                    <% }); %>
                  </tbody>
                </table>
              </div>
            </div>
          </div>
        </div>
      <% } %>
    </div>
  <% } else { %>
    <div class="row">
      <div class="col-md-12">
        <div class="card shadow-sm">
          <div class="card-body text-center">
            <p class="lead">Engir kylfingar hafa verið skráðir enn.</p>
            <% if(typeof user !== 'undefined' && user) { %>
              <a href="/players/add" class="btn btn-primary">
                <i class="fas fa-user-plus me-2"></i>Skrá fyrsta kylfing
              </a>
            <% } %>
          </div>
        </div>
      </div>
    </div>
  <% } %>
</div>

<script>
const loadedPlayers = new Set();

async function loadPointEntries(playerId) {
  // Only load once per player
  if (loadedPlayers.has(playerId)) {
    return;
  }
  
  try {
    const response = await fetch(`/api/player/${playerId}/point-entries`);
    const data = await response.json();
    
    const contentDiv = document.getElementById(`pointEntriesContent-${playerId}`);
    const countSpan = document.getElementById(`entryCount-${playerId}`);
    
    if (data.pointEntries && data.pointEntries.length > 0) {
      let entriesHtml = '<div class="row">';
      
      data.pointEntries.forEach(entry => {
        const pointsClass = entry.points >= 0 ? 'text-success' : 'text-danger';
        const pointsIcon = entry.points >= 0 ? 'plus' : 'minus';
        const entryDate = new Date(entry.createdAt).toLocaleDateString('is-IS');
        const entryTime = new Date(entry.createdAt).toLocaleTimeString('is-IS', { hour: '2-digit', minute: '2-digit' });
        
        entriesHtml += `
          <div class="col-md-6 mb-2">
            <div class="card border-0 bg-white">
              <div class="card-body p-2">
                <div class="d-flex justify-content-between align-items-start mb-1">
                  <span class="${pointsClass} fw-bold">
                    <i class="fas fa-${pointsIcon}-circle me-1"></i>
                    ${entry.points >= 0 ? '+' : ''}${entry.points} stig
                  </span>
                  <small class="text-muted">
                    <i class="fas fa-calendar-alt me-1"></i>${entryDate}
                  </small>
                </div>
                <p class="mb-1 small">${entry.comment}</p>
                <div class="d-flex justify-content-between align-items-center">
                  <small class="text-muted">
                    <i class="fas fa-user me-1"></i>${entry.addedBy ? entry.addedBy.name : 'Óþekkt'}
                  </small>
                  <small class="text-muted">
                    <i class="fas fa-clock me-1"></i>${entryTime}
                  </small>
                </div>
              </div>
            </div>
          </div>
        `;
      });
      
      entriesHtml += '</div>';
      contentDiv.innerHTML = entriesHtml;
      countSpan.textContent = `${data.pointEntries.length}`;
    } else {
      contentDiv.innerHTML = `
        <div class="text-center py-3">
          <i class="fas fa-info-circle fa-2x text-muted mb-2"></i>
          <p class="text-muted mb-0">Engar stigafærslur skráðar</p>
        </div>
      `;
      countSpan.textContent = '0';
    }
    
    loadedPlayers.add(playerId);
  } catch (error) {
    console.error('Error loading point entries:', error);
    const contentDiv = document.getElementById(`pointEntriesContent-${playerId}`);
    contentDiv.innerHTML = `
      <div class="text-center py-3">
        <i class="fas fa-exclamation-triangle fa-2x text-warning mb-2"></i>
        <p class="text-muted mb-0">Villa kom upp við að hlaða stigayfirlit</p>
      </div>
    `;
  }
}
</script> 