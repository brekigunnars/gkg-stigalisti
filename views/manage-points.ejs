<div class="row mb-4">
  <div class="col-md-12">
    <div class="card shadow-sm">
      <div class="card-body">
        <h1 class="mb-3">
          <i class="fas fa-star text-success me-2"></i>Stigastjórnun
        </h1>
        <p class="lead">Bæta við eða draga frá stigum kylfinga</p>
      </div>
    </div>
  </div>
</div>

<% if(menPlayers.length > 0 || womenPlayers.length > 0) { %>
  <div class="row">
    <!-- Men's table -->
    <% if(menPlayers.length > 0) { %>
      <div class="col-md-12 mb-4">
        <div class="card shadow-sm">
          <div class="card-header bg-light">
            <h3><i class="fas fa-mars text-primary me-2"></i>Karlar</h3>
          </div>
          <div class="card-body">
            <div class="table-responsive">
              <table class="table table-striped table-hover">
                <thead>
                  <tr>
                    <th>Kylfingur</th>
                    <th>Núverandi stig</th>
                    <th>Aðgerðir</th>
                  </tr>
                </thead>
                <tbody>
                  <% menPlayers.forEach(player => { %>
                    <tr>
                      <td><%= player.name %></td>
                      <td>
                        <span class="badge <%= player.points > 0 ? 'bg-success' : 'bg-secondary' %> point-badge">
                          <%= player.points %>
                        </span>
                      </td>
                      <td>
                        <form action="/players/<%= player._id %>/update-points" method="POST" class="d-inline">
                          <div class="input-group input-group-sm">
                            <input type="number" class="form-control" name="points" placeholder="±stig" required style="width: 80px;">
                            <input type="text" class="form-control" name="notes" placeholder="Athugasemd" style="width: 120px;">
                            <button type="submit" class="btn btn-primary btn-sm">
                              <i class="fas fa-plus-minus"></i>
                            </button>
                          </div>
                        </form>
                      </td>
                    </tr>
                  <% }); %>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
    <% } %>

    <!-- Women's table -->
    <% if(womenPlayers.length > 0) { %>
      <div class="col-md-12">
        <div class="card shadow-sm">
          <div class="card-header bg-light">
            <h3><i class="fas fa-venus text-danger me-2"></i>Konur</h3>
          </div>
          <div class="card-body">
            <div class="table-responsive">
              <table class="table table-striped table-hover">
                <thead>
                  <tr>
                    <th>Kylfingur</th>
                    <th>Núverandi stig</th>
                    <th>Aðgerðir</th>
                  </tr>
                </thead>
                <tbody>
                  <% womenPlayers.forEach(player => { %>
                    <tr>
                      <td><%= player.name %></td>
                      <td>
                        <span class="badge <%= player.points > 0 ? 'bg-success' : 'bg-secondary' %> point-badge">
                          <%= player.points %>
                        </span>
                      </td>
                      <td>
                        <form action="/players/<%= player._id %>/update-points" method="POST" class="d-inline">
                          <div class="input-group input-group-sm">
                            <input type="number" class="form-control" name="points" placeholder="±stig" required style="width: 80px;">
                            <input type="text" class="form-control" name="notes" placeholder="Athugasemd" style="width: 120px;">
                            <button type="submit" class="btn btn-primary btn-sm">
                              <i class="fas fa-plus-minus"></i>
                            </button>
                          </div>
                        </form>
                      </td>
                    </tr>
                  <% }); %>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
    <% } %>
  </div>
<% } else { %>
  <div class="row">
    <div class="col-md-12">
      <div class="card shadow-sm">
        <div class="card-body text-center">
          <p class="lead">Engir kylfingar hafa verið skráðir enn.</p>
          <a href="/players/add" class="btn btn-primary">
            <i class="fas fa-user-plus me-2"></i>Skrá fyrsta kylfing
          </a>
        </div>
      </div>
    </div>
  </div>
<% } %> 