<div class="row mb-4">
  <div class="col-md-12">
    <div class="card shadow-sm">
      <div class="card-body">
        <h1 class="mb-3">
          <i class="fas fa-star text-success me-2"></i>Stigastjórnun
        </h1>
        <p class="lead">Bæta við eða draga frá stigum kylfinga</p>
      </div>
    </div>
  </div>
</div>

<% if(players.length > 0) { %>
  <div class="row">
    <div class="col-md-12">
      <div class="card shadow-sm">
        <div class="card-header bg-light">
          <h3>Listi yfir kylfinga</h3>
        </div>
        <div class="card-body">
          <div class="table-responsive">
            <table class="table table-striped table-hover">
              <thead>
                <tr>
                  <th>Kylfingur</th>
                  <th>Núverandi stig</th>
                  <th>Aðgerðir</th>
                </tr>
              </thead>
              <tbody>
                <% players.forEach(player => { %>
                  <tr>
                    <td><%= player.name %></td>
                    <td>
                      <span class="badge <%= player.points > 0 ? 'bg-success' : 'bg-secondary' %> point-badge">
                        <%= player.points %>
                      </span>
                    </td>
                    <td>
                      <a href="/players/<%= player._id %>/points" class="btn btn-primary">
                        <i class="fas fa-plus-circle me-1"></i> Bæta við stigum
                      </a>
                      <a href="/players/<%= player._id %>/history" class="btn btn-info">
                        <i class="fas fa-history me-1"></i> Skoða sögu
                      </a>
                    </td>
                  </tr>
                <% }); %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
<% } else { %>
  <div class="row">
    <div class="col-md-12">
      <div class="card shadow-sm">
        <div class="card-body text-center">
          <p class="lead">Engir kylfingar hafa verið skráðir enn.</p>
          <a href="/players/add" class="btn btn-primary">
            <i class="fas fa-user-plus me-2"></i>Skrá fyrsta kylfing
          </a>
        </div>
      </div>
    </div>
  </div>
<% } %> 