<div class="row mb-4">
  <div class="col-md-12">
    <div class="card shadow-sm">
      <div class="card-body">
        <h1 class="mb-3">
          <i class="fas fa-tachometer-alt text-primary me-2"></i>Stjórnborð
        </h1>
        <p class="lead">Velkomin(n) <%= typeof name !== 'undefined' ? name : 'Stjórnandi' %></p>
        <hr>
        <div class="row">
          <div class="col-md-4 mb-3">
            <div class="card bg-primary text-white h-100">
              <div class="card-body py-5">
                <h3><i class="fas fa-users me-2"></i>Kylfingastjórnun</h3>
                <p>Bæta við, breyta eða fjarlægja kylfinga</p>
                <a href="/players" class="btn btn-light">Sjá kylfinga</a>
              </div>
            </div>
          </div>
          <div class="col-md-4 mb-3">
            <div class="card bg-success text-white h-100">
              <div class="card-body py-5">
                <h3><i class="fas fa-star me-2"></i>Stigastjórnun</h3>
                <p>Bæta við eða draga frá stigum kylfinga</p>
                <a href="/manage-points" class="btn btn-light">Stjórna stigum</a>
              </div>
            </div>
          </div>
          <div class="col-md-4 mb-3">
            <div class="card bg-info text-white h-100">
              <div class="card-body py-5">
                <h3><i class="fas fa-trophy me-2"></i>Skoða stigatöflu</h3>
                <p>Sjá núverandi stöðu kylfinga</p>
                <a href="/" class="btn btn-light">Skoða stigatöflu</a>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <div class="card shadow-sm">
      <div class="card-header bg-light">
        <h3>Núverandi stigatafla</h3>
      </div>
      <div class="card-body">
        <% if(players.length > 0) { %>
          <div class="table-responsive">
            <table class="table table-striped table-hover">
              <thead>
                <tr>
                  <th>Sæti</th>
                  <th>Kylfingur</th>
                  <th>Stig</th>
                  <th>Aðgerðir</th>
                </tr>
              </thead>
              <tbody>
                <% players.forEach((player, index) => { %>
                  <tr>
                    <td><span class="badge bg-secondary">#<%= index + 1 %></span></td>
                    <td><%= player.name %></td>
                    <td>
                      <span class="badge <%= player.points > 0 ? 'bg-success' : 'bg-secondary' %> point-badge">
                        <%= player.points %>
                      </span>
                    </td>
                    <td>
                      <a href="/players/<%= player._id %>/points" class="btn btn-sm btn-primary">
                        <i class="fas fa-plus-circle"></i> Bæta við stigum
                      </a>
                      <a href="/players/edit/<%= player._id %>" class="btn btn-sm btn-secondary">
                        <i class="fas fa-edit"></i> Breyta
                      </a>
                      <a href="/players/<%= player._id %>/history" class="btn btn-sm btn-info">
                        <i class="fas fa-history"></i> Saga
                      </a>
                    </td>
                  </tr>
                <% }); %>
              </tbody>
            </table>
          </div>
        <% } else { %>
          <p>Engir kylfingar hafa verið skráðir enn.</p>
          <a href="/players/add" class="btn btn-primary">
            <i class="fas fa-user-plus"></i> Skrá fyrsta kylfing
          </a>
        <% } %>
      </div>
    </div>
  </div>
</div> 