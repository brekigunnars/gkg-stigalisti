<div class="row mt-5">
  <div class="col-md-6 mx-auto">
    <div class="card shadow">
      <div class="card-header bg-primary text-white">
        <h3><i class="fas fa-sign-in-alt me-2"></i>Innskráning</h3>
      </div>
      <div class="card-body">
        <form action="/users/login" method="POST">
          <div class="mb-3">
            <label for="email" class="form-label">Netfang</label>
            <input
              type="email"
              id="email"
              name="email"
              class="form-control"
              placeholder="Sláðu inn netfang"
              required
            />
          </div>
          <div class="mb-3">
            <label for="password" class="form-label">Lykilorð</label>
            <input
              type="password"
              id="password"
              name="password"
              class="form-control"
              placeholder="Sláðu inn lykilorð"
              required
            />
          </div>
          <button type="submit" class="btn btn-primary btn-block w-100">Skrá inn</button>
        </form>
        <p class="mt-4 text-center text-muted">
          <small>Aðeins kerfisstjórar hafa aðgang að stjórnborði</small>
        </p>
      </div>
    </div>
  </div>
</div> 